{
  "name": "cappy",
  "description": "An all-in-one screenshot tool.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/winneon/cappy.git"
  },
  "license": "MIT",
  "main": "entry.js",
  "dependencies": {
    "electron": "^1.4.1",
    "react": "^15.3.2",
    "source-map-support": "^0.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "devtron": "^1.3.0",
    "standard": "^8.1.0",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "start": "standard src/**/*.js && babel src -d lib -q --ignore src/Renderer -s && ./node_modules/.bin/electron .",
    "watch": "standard src/**/*.js && watchify src/Renderer/Renderer.js -d -t [ babelify -o static/js/Renderer.min.js ]"
  }
}
