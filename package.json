{
  "name": "cappy",
  "description": "An all-in-one screenshot tool.",
  "version": "0.0.1",
  "author": "Jesse Bryan <winneonsword@gmail.com>",
  "homepage": "https://github.com/winneon/cappy",
  "repository": "winneon/cappy",
  "license": "MIT",
  "build": {
    "appId": "moe.winneon.cappy",
    "asar": false,
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "dependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "concurrently": "^3.1.0",
    "electron": "^1.4.1",
    "electron-builder": "^7.3.0",
    "node-sass": "^3.10.0",
    "standard": "^8.1.0",
    "uglifycss": "0.0.21",
    "watch": "^1.0.1",
    "webpack": "^1.0.1"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "dev": "webpack",
    "pack": "npm run build && npm run sass && build --dir",
    "postinstall": "install-app-deps",
    "sass": "node-sass --include-path sass --output-style compressed sass/base.scss app/dist/bundle.css",
    "start": "npm run dev && concurrently --kill-others --raw \"watch 'npm run sass' sass\" \"electron app\""
  }
}
