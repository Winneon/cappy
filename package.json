{
  "name": "cappy",
  "description": "An all-in-one screenshot tool.",
  "version": "0.0.1",
  "author": "Jesse Bryan <winneonsword@gmail.com>",
  "homepage": "https://github.com/winneon/cappy",
  "license": "MIT",
  "main": "entry.js",
  "build": {
    "appId": "moe.winneon.${name}",
    "mac": {
      "category": "public.app-category.productivity"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/winneon/cappy.git"
  },
  "dependencies": {
    "react": "^15.3.2",
    "source-map-support": "^0.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "concurrently": "^2.2.0",
    "devtron": "^1.3.0",
    "electron": "^1.4.1",
    "electron-builder": "^7.3.0",
    "node-sass": "^3.10.0",
    "react-dom": "^15.3.2",
    "standard": "^8.1.0",
    "watch": "^0.19.2"
  },
  "scripts": {
    "start": "standard src/**/*.js && babel src -d lib -q --ignore src/Renderer -s && electron .",
    "build:js": "standard src/Renderer/**/*.js && browserify src/Renderer/Renderer.js -d -t babelify -o static/index.min.js",
    "build:css": "node-sass --include-path sass sass/base.scss static/index.min.css",
    "build": "npm run build:js && npm run build:css",
    "watch:js": "watch 'npm run build:js' src/Renderer",
    "watch:css": "watch 'npm run build:css' sass",
    "watch": "concurrently 'npm run watch:js' 'npm run watch:css'"
  }
}
